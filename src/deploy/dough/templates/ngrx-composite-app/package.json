{
  "name": "@scci-branding/ngrx-composite-app",
  "version": "1.0.0",
  "description": "compositeApp description",
  "author": "Branding",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "test": "jest --ci --testResultsProcessor=jest-junit",
    "build": "ng build --prod --aot false --output-hashing false --verbose",
    "ci": "npm run test && npm run build",
    "watch:test": "jest --watchAll",
    "sr:test": "jest --ci",
    "lib:link": "npm link @scci-servicename/featurename",
    "start": "npm run lib:link && ng serve -p 4230",
    "watch:start": "ng serve -p 4230 -o",
    "debug:build": "npm run lib:link && ng build -w --extractCss --aot false --output-hashing false --verbose --sourcemaps=true --build-optimizer=false",
    "sr:start": "ng serve -p 4230 -sr"
  },
  "jest": {
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      ".+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/app/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "testResultsProcessor": "jest-junit"
  },
  "jest-junit": {
    "suiteName": "app tests",
    "output": "./TESTS-junit.xml"
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.0",
    "@angular/cdk": "5.2.0",
    "@angular/common": "5.2.0",
    "@angular/compiler": "5.2.0",
    "@angular/core": "5.2.0",
    "@angular/forms": "5.2.0",
    "@angular/http": "5.2.0",
    "@angular/material": "5.2.0",
    "@angular/platform-browser": "5.2.0",
    "@angular/platform-browser-dynamic": "5.2.0",
    "@angular/router": "5.2.0",
    "@ngrx/effects": "5.0.1",
    "@ngrx/entity": "5.0.1",
    "@ngrx/router-store": "5.0.1",
    "@ngrx/store": "5.0.0",
    "@ngrx/store-devtools": "5.0.1",
    "@scci-branding/angular-popup": "1.0.0-40643",
    "@scci-branding/rootstate": "1.0.0-40084",
    "classlist.js": "1.1.20150312",
    "core-js": "2.4.1",
    "lodash": "4.17.5",
    "rxjs": "5.5.6",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "1.6.5",
    "@angular/compiler-cli": "5.2.0",
    "@angular/language-service": "5.2.0",
    "@types/jasmine": "2.8.3",
    "@types/jasminewd2": "2.0.2",
    "@types/jest": "20.0.4",
    "@types/lodash": "4.14.102",
    "@types/node": "6.0.60",
    "chokidar": "2.0.2",
    "chokidar-cli": "1.2.0",
    "codelyzer": "4.0.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "20.0.4",
    "jest-junit": "3.6.0",
    "jest-preset-angular": "5.1.0",
    "jest-zone-patch": "0.0.8",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.2.1",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "protractor": "5.1.2",
    "ts-node": "3.3.0",
    "tslint": "5.9.1",
    "typescript": "2.4.2"
  }
}